{
  "include": [
    "./src/**/*"
  ],
  "compilerOptions": {
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "alwaysStrict": true,
    "removeComments": true,
    "sourceMap": true,
    "target": "es5",
    "outDir": "./dist",
    "module": "es6",
    "moduleResolution": "node",
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2017",
      "dom"
    ],
    "jsx": "react",
    "allowJs": true
  },
  "compileOnSave": false
}
